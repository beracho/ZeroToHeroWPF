<Window x:Class="CountriesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:CountriesApp.Controls"
        xmlns:local="clr-namespace:CountriesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <StackPanel Margin="10">
        <Button Content="Load Image" Click="loadImageButton_Click"/>
        <Label Content="Region"/>
        <ComboBox x:Name="regionsComboBox" SelectionChanged="regionsComboBox_SelectionChanged"/>
        <Label Content="Subregion"/>
        <ComboBox x:Name="subregionsComboBox"/>
        <TextBox/>
        <Button Content="Display countries" Click="loadRestServiceButton_Click"/>
    </StackPanel>
</Window>
